<!DOCTYPE html>
<html>
<head>
  <title>Circle Area and Circumference</title>
</head>
<body>

<h2>Circle Calculations</h2>

<script type="text/javascript">
  var radius = 5;

  // Calculate area and circumference
  var area = Math.PI * radius * radius;
  var circumference = 2 * Math.PI * radius;

  // Display results
  document.write("Radius: " + radius + "<br>");
  document.write("Area of Circle: " + area.toFixed(2) + "<br>");
  document.write("Circumference of Circle: " + circumference.toFixed(2));
</script>

</body>
</html>
